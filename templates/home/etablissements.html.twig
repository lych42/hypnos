<h3 style="text-align: center">Quelques hôtels...</h3>

{% for etablissement in etablissements %}

<div class="container">
  <div class="card-deck mb-3 text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">{{ etablissement.nom }}</h4>
      </div>
      <div class="card-body">
        <p>{{ etablissement.town }}</p>
        <p>{{ etablissement.adress }}</p>
        <p>{{ etablissement.description }}</p>
        <button type="button" class="btn btn-lg btn-block btn-light">
        <a href="{{ path('reservation_index') }}">Réservez</a>
        </button>
      </div>
    </div>

{% endfor %}